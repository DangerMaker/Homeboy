                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="直接登录"
                    android:textColor="@color/text_light_gray"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wx"
