<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.adg.homeboy.view.MyVideoView
        android:id="@+id/videoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <ImageView
                android:id="@+id/ic_back"
                style="@style/btn_back_style" />

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/title_text_style"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_centerHorizontal="true"
                android:text="@string/login" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dip">

                <ImageView
                    android:id="@+id/login_name_icon_new"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dip"
                    android:background="@drawable/login_name" />

                <com.adg.homeboy.view.MyDelEditetext
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@id/login_name_icon_new"
                    android:ems="10"
                    android:hint="请输入手机号或账号"
                    android:background="@null"
                    android:textColor="#c9c9c9"
                    android:textColorHint="@color/text_light_gray"
                    android:textSize="17sp"/>

                <!--android:background="@color/white_transparent"-->

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@color/text_light_gray" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dip">

                <ImageView
                    android:id="@+id/login_pass_icon_new"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dip"
                    android:background="@drawable/login_pass" />

                <com.adg.homeboy.view.MyDelEditetext
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@id/login_pass_icon_new"
                    android:ems="10"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:background="@null"
                    android:textColor="#c9c9c9"
                    android:textColorHint="@color/text_light_gray"
                    android:textSize="17sp" />
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@color/text_light_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/load_btn_new"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/red_5dp_radius"
                android:text="登录"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

